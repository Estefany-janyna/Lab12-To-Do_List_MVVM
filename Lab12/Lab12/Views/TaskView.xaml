<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab12.Views.TaskView">
    <ContentPage.Content>
        <StackLayout Padding="50">
            <Label FontSize="Title" Text=" Title" />
            <Entry FontSize="Title" Text="{Binding Title}" > </Entry>
            <Label FontSize="Large" Text="Description" />
            <Entry FontSize="Large" Text="{Binding Description}" />
            <Button Text="Save" BackgroundColor="Pink" Command="{Binding Save}"></Button>
            <Button Text="Get" BackgroundColor="Green" Command="{Binding Get}" ></Button>
            <ListView ItemsSource="{Binding Tasks}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Title}"></Label>
                                    <Label Text="{Binding Description}"></Label>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>